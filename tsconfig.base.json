{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        // Strictness
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        // Compatibility
        "moduleResolution": "node", // To import CommonJS and esm modules
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true // Needed for eslint consistent-type-imports https://github.com/typescript-eslint/typescript-eslint/issues/2559#issuecomment-692882427
    }
}
